<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".card_adapter5">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ft15"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didit Teknik"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/profile_image1"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="26/04/2023 06:29"
                android:textColor="#A7A0A0"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv13"
                app:layout_constraintStart_toStartOf="@id/tv13"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5758 Teknik"
                android:textColor="#2196F3"
                app:layout_constraintTop_toBottomOf="@id/tv14"
                app:layout_constraintStart_toStartOf="@id/tv14"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu Konfirmasi"
                android:textColor="#FFEB3B"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/tv15"
                app:layout_constraintTop_toTopOf="@id/tv15"
                app:layout_constraintBottom_toBottomOf="@id/tv15"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
